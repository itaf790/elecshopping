<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecivedActivity"
    android:background="@drawable/backm">


    <ImageView
        android:id="@+id/close"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/back"></ImageView>

    <TextView
        android:id="@+id/text"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center|center_horizontal"
        android:text="Cnofirm Orders"
        android:textAlignment="center"
        android:textColor="#372E2E"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="please confirm your shipment details "
        android:textSize="18dp"
        android:textColor="#5A554D"
        android:layout_below="@id/text"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_horizontal" />


    <EditText
        android:id="@+id/shipment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"

        android:hint="your full name "
        android:textColor="#000000"
        android:textColorHint="#554C4C" />
    <EditText
        android:id="@+id/shipment_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipment_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="phone"
        android:hint="your phone number "
        android:textColorHint="#554C4C"
        android:textColor="#000000"
        android:maxLength="10"
        />
    <EditText
        android:id="@+id/shipment_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipment_phone_number"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your Home Address"

        android:textColorHint="#554C4C"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/shipment_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipment_address"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Confirm E-mail Address  "
        android:textColorHint="#554C4C"
        android:textColor="#000000"
        />

    <Button
        android:id="@+id/confirm_final_order"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="confirm "
        android:background="@drawable/buttons"
        android:textColor="#292626"
        android:textSize="20dp"
        android:layout_below="@id/txttotalprice"
        android:padding="20dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txttotalprice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/shipment_email"
        android:layout_marginTop="40dp"
        android:text="Price "
        android:padding="18dp"
        android:textColor="@color/black"
        android:background="@drawable/inputs"></TextView>




</RelativeLayout>