<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backm"
    tools:context=".Admin.AdminMaintainProductsActivity">


    <ImageView
        android:id="@+id/close"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back"></ImageView>

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center|center_horizontal"
        android:text="Maintain Products"
        android:id="@+id/text"
        android:textAlignment="center"
        android:textColor="#372E2E"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="click here to edit image "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="19dp"></TextView>


            <ImageView
                android:id="@+id/product_image_mantain"
                android:layout_width="380dp"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_menu_camera"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="edit the details of the product"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="19dp"></TextView>
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:padding="5dp"
                android:layout_marginTop="10dp">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs">

                    <TextView
                        android:id="@+id/txtpaymentmethod"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="15dip"
                        android:textColor="@color/black"
                        android:text="Payment method" />

                    <EditText
                        android:id="@+id/maintan_paymentmethod"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:id="@+id/txtdeliveryfee"
                        android:textColor="@color/black"
                        android:text="Delivery fee" />

                    <EditText
                        android:layout_width="0dp"
                        android:id="@+id/maintan_deliveryfee"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/txtdeliverytime"
                        android:textColor="@color/black"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="Delivery time" />

                    <EditText
                        android:id="@+id/maintan_deliverytime"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/txtproductname"
                        android:textColor="@color/black"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="Product name" />

                    <EditText
                        android:id="@+id/maintan_product_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="product price"
                        android:id="@+id/txtproductprice"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/maintan_product_price"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="product quantity"
                        android:id="@+id/txtproductqnt"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/maintan_product_qnt"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="Product brand"
                        android:id="@+id/txtproductbrand"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/maintan_product_brand"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="Description"
                        android:id="@+id/txtdescription"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/maintan_product_description"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="Discount"
                        android:id="@+id/txtdiscount"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/maintan_product_discount"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/apply_changes_btn_mantain"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_description_mantain"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/buttons"
                android:gravity="center"
                android:hint="Apply Changes"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/delete_pdt_btn"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/apply_changes_btn"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/buttons"
                android:gravity="center_horizontal"
                android:hint="Delete Product"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>