<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminHomeActivity"
    android:background="@drawable/backm">



    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center|center_horizontal"
        android:text="Admin Categories"
        android:id="@+id/textadmincategories"
        android:textAlignment="center"
        android:textColor="#372E2E"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textadmincategories">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center">

                <Button
                    android:id="@+id/add_new_item"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/buttons"
                    android:gravity="center_horizontal"
                    android:hint="Add new products"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp" />


            <Button
                    android:id="@+id/show_orders"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/add_new_item"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/buttons"
                    android:gravity="center_horizontal"
                    android:hint="Show orders"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/maintan_item"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/show_orders"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/buttons"
                    android:gravity="center_horizontal"
                    android:hint="Maintain products"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/adminpaymentmethod"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/maintan_item"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/buttons"
                    android:gravity="center_horizontal"
                    android:hint="Payment Method"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/admindeliveryfee"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/adminpaymentmethod"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/buttons"
                    android:gravity="center_horizontal"
                    android:hint="Delivery fee"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/admindeliverytime"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/admindeliveryfee"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/buttons"
                    android:gravity="center_horizontal"
                    android:hint="Delivery time"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/exchangepolicy"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/admindeliverytime"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/buttons"
                    android:gravity="center_horizontal"
                    android:hint="Exchange policy"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/returnspolicy"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/exchangepolicy"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/buttons"
                    android:gravity="center_horizontal"
                    android:hint="Returns policy"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp" />
            <Button
                android:id="@+id/discountallproducts"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/exchangepolicy"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/buttons"
                android:gravity="center_horizontal"
                android:hint="Discount for all products"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp" />


            <Button
                android:id="@+id/adminlogout"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/discountallproducts"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/buttons"
                android:gravity="center_horizontal"
                android:hint="logOut"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>