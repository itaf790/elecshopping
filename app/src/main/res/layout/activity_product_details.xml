<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity"
    android:background="@drawable/backm">


    <ImageView
        android:id="@+id/close"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:src="@drawable/back"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center"
        ></ImageView>
    <TextView
        android:id="@+id/textdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="Product Details"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textdetails"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">





            <ImageView
                android:id="@+id/product_image_details"
                android:layout_width="380dp"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_menu_camera"
                android:layout_marginTop="20dp"></ImageView>


            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                   >

                    <TextView
                        android:id="@+id/txtpaymentmethod"
                        android:layout_width="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="15dip"
                        android:text="Payment method"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/payment_method_details"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:id="@+id/txtdeliveryfee"
                        android:textColor="@color/black"
                        android:text="Delivery fee" />

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/delivery_fee_details"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                         />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/txtdeliverytime"
                        android:textColor="@color/black"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="Delivery time" />

                    <TextView
                        android:id="@+id/delivery_time_details"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/txtproductname"
                        android:textColor="@color/black"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="Product name" />

                    <TextView
                        android:id="@+id/product_name_details"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="product price"
                        android:id="@+id/txtproductprice"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/product_price_details"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="Product brand"
                        android:id="@+id/txtproductbrand"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/product_brand_details"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                         />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="Description"
                        android:id="@+id/txtdescription"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/product_description_details"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="15dip"
                        android:text="Discount"
                        android:id="@+id/txtdiscount"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/product_discount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>

            </TableLayout>



            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:shadowColor="@color/black"
                android:layout_gravity="center"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/textnumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:shadowColor="@color/black"
                android:layout_gravity="center"
                android:text="Select a number of products..."
                android:visibility="visible"
                />
            <NumberPicker
                android:id="@+id/np"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv"
                android:visibility="visible"
                />



            <Button
                android:id="@+id/pd_add_to_cart_button"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/np"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttons"
                android:text="Add to Cart"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>