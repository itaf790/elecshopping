<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity"
    android:background="@drawable/backm">


    <ImageView
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back"></ImageView>

    <TextView
        android:id="@+id/text"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:gravity="center|center_horizontal"
        android:text="Payment Method طريقة الدفع "
        android:textAlignment="center"
        android:textColor="#372E2E"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/txtmethod"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"

        android:gravity="center"
        android:text="Choose your payment method  اختيار طريقة الدفع "
        android:textColor="#272625"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/credit_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtmethod"
        android:layout_marginTop="30dp"
        android:onClick="onClick"
        android:shadowColor="#191818"
        android:text="Credit Card "
        android:textColor="#121111"
        android:textColorHint="#121111"
        android:buttonTint="@color/colorPrimary"
        android:layout_marginLeft="40dp"
        android:textSize="18dp"
        tools:ignore="OnClick" />

    <CheckBox
        android:id="@+id/recived"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/credit_card"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:textColor="#191818"
        android:textColorHint="#191818"
        android:buttonTint="@color/colorPrimary"
        android:text="Payment when Orders Recived | الدفع عن التوصيل  "
        android:textSize="15dp"
        android:onClick="onClick"
        tools:ignore="OnClick" />




</RelativeLayout>