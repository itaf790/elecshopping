<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backm"
    tools:context=".Admin.AdminAddProductsActivity">


    <TextView
        android:id="@+id/text"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center|center_horizontal"
        android:text="Add Products"
        android:textAlignment="center"
        android:textColor="#372E2E"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>

    <ImageView
        android:id="@+id/close"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back"
        android:contentDescription="TODO"></ImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="click here to add image "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="19dp"></TextView>


            <ImageView
                android:id="@+id/adminproduct_image"
                android:layout_width="380dp"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_menu_camera"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="enter the details of the product"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="19dp"></TextView>
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp"
               >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs">

                    <TextView
                        android:id="@+id/txtpaymentmethod"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="15dip"
                        android:textColor="@color/black"
                        android:text="Payment method" />

                    <EditText
                        android:id="@+id/adminpaymentmethod"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:id="@+id/txtdeliveryfee"
                        android:textColor="@color/black"
                        android:text="Delivery fee" />

                    <EditText
                        android:layout_width="0dp"
                        android:id="@+id/admindeliveryfee"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/txtdeliverytime"
                        android:textColor="@color/black"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="Delivery time" />

                    <EditText
                        android:id="@+id/admindeliverytime"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text=""
                        android:autofillHints="" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/txtproductname"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:padding="15dip"
                        android:text="Product name" />

                    <EditText
                        android:id="@+id/adminproduct_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="product price"
                        android:id="@+id/txtproductprice"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/adminproduct_price"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>
               <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                   android:background="@drawable/inputs"
                   android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:padding="15dip"
                    android:text="product quantity"
                    android:id="@+id/txtproductqnt"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/adminproduct_qnt"
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:padding="15dip"
                     />
            </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/inputs"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="Product brand"
                        android:id="@+id/txtproductbrand"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/adminproduct_brand"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                       />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="Description"
                        android:id="@+id/txtdescription"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/adminproduct_description"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                         />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:layout_marginTop="15dp"
                   >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="15dip"
                        android:text="Discount"
                        android:id="@+id/txtdiscount"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/adminproduct_discount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="15dip"
                        />
                </TableRow>

            </TableLayout>


            <Button
                android:id="@+id/adminadd_new_product"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_price"
                android:text="Add Product"
               android:layout_gravity="center"
                android:gravity="center"
                android:padding="17dp"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/buttons"
                android:layout_marginBottom="19dp"
               ></Button>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>