<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/backm"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs">

        <TextView
            android:id="@+id/cart_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Product Name"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textColor="#494545"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/cart_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_product_name"
            android:gravity="center_horizontal"
            android:text="Product Price"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textColor="#494545"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/cart_product_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_product_price"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="Product Brand"
            android:textAlignment="center"
            android:textColor="#494545"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/cart_product_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_product_brand"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="Product Date"
            android:textAlignment="center"
            android:textColor="#494545"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/cart_product_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_product_date"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="Product Quantity"
            android:textAlignment="center"
            android:textColor="#494545"
            android:textSize="15dp"
            android:textStyle="bold"
           android:layout_marginBottom="10dp"
            />


    </RelativeLayout>



</androidx.cardview.widget.CardView>