<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backm"
    tools:context=".CartActivity">


    <ImageView
        android:id="@+id/close"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginStart="27dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="511dp"
        android:src="@drawable/back"
      ></ImageView>

    <TextView
        android:id="@+id/mycart"
        android:layout_width="225dp"
        android:layout_height="41dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="2dp"
        android:gravity="center|center_horizontal"
        android:text="My Cart"
        android:textAlignment="center"
        android:textColor="#372E2E"
        android:textSize="18dp"
        android:textStyle="bold"
       ></TextView>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mycart"
        android:layout_above="@id/cart_next"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/msg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#71779A"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:text="Congratulations, your final order has been placed successfully.Soon you will be verified "
        android:textSize="20dp"
        android:visibility="gone"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/cart_next"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttons"
        android:text="Next"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_margin="10dp"
        />

</RelativeLayout>